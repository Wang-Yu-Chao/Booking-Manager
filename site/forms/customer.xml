<?xml version="1.0" encoding="utf-8" ?>
<form>
    <fieldset
        addfieldprefix="Joomla\Component\BookingManager\Site\Field"
    >
        <field
            name="id"
            type="hidden"
        />
        <field
            name="name"
            type="text"
            label="COM_BOOKINGMANAGER_CUSTOMER_NAME_LABEL"
            description="COM_BOOKINGMANAGER_CUSTOMER_NAME_DESC"
            size="30"
            class="inputbox"
            required="true"
            default=""
        />
        <field
            name="email"
            type="email"
            label="COM_BOOKINGMANAGER_CUSTOMER_EMAIL_LABEL"
            description="COM_BOOKINGMANAGER_CUSTOMER_EMAIL_DESC"
            size="50"
            class="inputbox validate-email"
            message="COM_BOOKINGMANAGER_CUSTOMER_EMAIL_MESSAGE"
            required="true"
            validate="email"
            hint="COM_BOOKINGMANAGER_CUSTOMER_EMAIL_HINT"
            default=""
        />
    </fieldset>
</form>