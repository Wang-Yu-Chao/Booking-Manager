<?xml version="1.0" encoding="utf-8" ?>
<form
        addrulepath="/administrator/components/com_bookingmanager/models/rules"
>
    <fieldset
            name="details"
            label="COM_BOOKINGMANAGER_BOOKINGMANAGER_DETAILS"
            addfieldprefix="Joomla\Component\BookingManager\Administrator\Field"
    >
        <field
                name="id"
                type="hidden"
        />
        <field
                name="roomNumber"
                type="text"
                label="COM_BOOKINGMANAGER_BOOKINGMANAGER_ROOMNUMBER_LABEL"
                description="COM_BOOKINGMANAGER_BOOKINGMANAGER_ROOMNUMBER_DESC"
                size="30"
                class="inputbox"
                required="true"
                default=""
        />
        <field
                name="name"
                type="text"
                label="COM_BOOKINGMANAGER_CUSTOMER_NAME_LABEL"
                description="COM_BOOKINGMANAGER_CUSTOMER_NAME_DESC"
                size="30"
                class="inputbox"
                required="true"
                default=""
        />
    </fieldset>

    <fieldset
            name="accesscontrol"
            label="COM_BOOKINGMANAGER_FIELDSET_RULES"
    >
        <field
                name="asset_id"
                type="hidden"
                filter="unset"
        />
        <field
                name="rules"
                type="rules"
                label="COM_BOOKINGMANAGER_FIELD_RULES_LABEL"
                filter="rules"
                validate="rules"
                class="inputbox"
                component="com_bookingmanager"
                section="orders"
        />
    </fieldset>
</form>